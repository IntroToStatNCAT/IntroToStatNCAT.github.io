region4west & 1.79 & 1.13 & 1.59 & 0.12 \\ 
region4south & 4.16 & 1.07 & 3.87 & 0.00 \\ 
   \hline
\end{tabular}
\end{center}


\begin{enumerate}[A)]
\item northeast
\item midwest
\item west
\item south
\item cannot tell
\end{enumerate}

